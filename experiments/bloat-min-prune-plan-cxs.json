{
    "experiment_name": "bloat-then-min-prune-cxs-only",

    "additional_controls":{
        "total_offspring": 20000,
        "stop_condition": "fwds",
        "stop_condition_value": 100000,
        "sgd_steps": 1000,
        "batch_size": 2,
        "initial_batch_size": 2,
        "single_structural_mutation": false,
        "n_fourier_features": 128,
        "objective_functions": [
            "psnr",
            "mse",
            "lpips",
            "dists",
            "ssim",
            "haarpsi",
            "vif",
            "msssim",
            "dss",
            "gmsd"
        ],
        "init_connection_probability": 0.5,
        "init_connection_probability_fourier": 0.50,
        "prob_add_node": 0.85,
        "prob_add_connection": 0.85,
        "prob_remove_node": 0.15,
        "prob_disable_connection": 0.15,
        "prune_threshold": 0.0,
        "sgd_l2_reg": 0.0003,
        "hidden_nodes_at_start": [16],
        "topology_mutation_iters": 4,
        "node_activation_prune_threshold": 0.01
    },

    "targets":[
        "data/skull.png",
        "data/sunrise.png",
        "data/dolphin.png",
        "data/apple.png"
    ],

    "color_modes":
    [
        "L",
        "HSL",
        "HSL",
        "HSL"
    ],

    "mode": "grid",

    "variables":[
       "connection_bloat",
       "min_pruned"
    ],


    "levels":[
        [0, 16, 64, 1024],
        [0, 16, 64, 1024]
    ],

    "skip_levels": [
        [0, 16],
        [0, 64],
        [0, 1024],
        [16, 64],
        [16, 1024],
        [64, 1024]
    ],

    "name_template": "bloat-then-min-prune-{connection_bloat}-{min_pruned}"

}