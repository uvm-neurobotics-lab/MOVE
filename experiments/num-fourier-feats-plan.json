{
    "experiment_name": "fourier-features",

    "additional_controls":{
        "total_offspring": 1000000,
        "stop_condition": "fwds",
        "stop_condition_value": 250000,
        "sgd_early_stop": 10,
        "batch_size": 5,
        "initial_batch_size": 5,
        "single_structural_mutation": false,
        "objective_functions": [
            "psnr",
            "mse",
            "lpips",
            "dists",
            "ssim",
            "haarpsi",
            "vif",
            "msssim",
            "dss",
            "gmsd"
        ],
        "init_connection_probability": 0.5,
        "init_connection_probability_fourier": 0.50,
        "prob_add_node": 0.85,
        "prob_add_connection": 0.85,
        "prob_remove_node": 0.15,
        "prob_disable_connection": 0.15,
        "sgd_l2_reg": 0.0003,
        "hidden_nodes_at_start": [16],
        "topology_mutation_iters": 2,
        "node_activation_prune_threshold": 0.01,
        "prune_threshold": 0.0001,
        "min_pruned": 1,
        "target_resize": [64,64],
        "sgd_steps" : 100
    },

    "targets":[
        "data/skull.png",
        "data/sunrise.png",
        "data/dolphin.png",
        "data/apple.png"
    ],

    "color_modes":
    [
        "L",
        "HSL",
        "HSL",
        "HSL"
    ],

    "mode": "grid",

    "variables":[
       "n_fourier_features"
    ],


    "levels":[
        [0, 
        4, 
        16, 
        64]
    ],

    "additional_parameters": {
        "n_fourier_features": {
            "num_inputs":{
                "0": 3, 
                "4": 7,
                "16": 19,
                "64": 67
            }
        }
    },

    "name_template": "{n_fourier_features:03d}_features"

}